        </div>

        <div class="detail">
            <button id="closeBtn">
                <i class="fa-solid fa-xmark"></i>
            </button>
            <div class="content">
            </div>
        </div>
    </div>
    <script src="~/js/AfterLogin.js"></script>

</body>
</html>